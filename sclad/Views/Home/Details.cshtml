@model sclad.Models.ViewModels.DetailsVM
<div class="">
    <form method="post">
        <input asp-for="@Model.Item.Id" hidden/>
        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark " style="border-radius: 0px;">
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <h1 class="text-white">@Model.Item.Name</h1>
                        </div>
                        <div class="col-12 col-md-6 text-md-end">
                            <h1 class="text-warning"> @((Model.Item.Price).ToString())р/@Model.Item.ItemType.Unit</h1>
                        </div>
                    </div>
                    
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WC.ImagePath@Model.Item.Img" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border" style="background-color:lavenderblush;color:black">@Model.Item.ItemType.Name</span>
                                        <span class="badge p-3 border" style="background-color:azure;color:black">@Model.Item.Punkt.Name</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.Item.Discription)</p>
                                    </div>
                                    <div class="col-12">
                                        Количество:
                                    </div>
                                    <div class="col-12">
                                        @if (Model.ExistInCart)
                                        {
                                            <input asp-for="@Model.Item.TempKol" disabled class="form-control " />
                                        }
                                        else
                                        {
                                            <input asp-for="@Model.Item.TempKol"  class="form-control " />
                                        }
                                        <span asp-validation-for="@Model.Item.TempKol" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index"class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            @if (Model.ExistInCart)
                            {
                                <button asp-action="RemoveFromCart" asp-route-id="@Model.Item.Id" type="submit" class="btn btn-warning form-control btn-lg" style="height:50px;">Remove from Cart</button>
                            }
                            else
                            {
                                <button asp-route-id="@Model.Item.Id" type="submit" class="btn btn-info form-control btn-lg" style="height:50px;">Add to Cart</button>
                            }
                            

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
         }