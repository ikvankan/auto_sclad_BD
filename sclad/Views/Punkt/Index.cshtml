@model IEnumerable<sclad.Models.Punkt>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Punkt List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Punkt" asp-action="Create" class="btn btn-primary">
                Create new Item Type
            </a>

        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class=" table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Наименование 
                    </th>
                    <th>
                        Адресс 
                    </th>
                    <th>
                        Контакты
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Name</td>
                        <td width="30%">@obj.Adress</td>
                        <td width="20%">@obj.Kontakti</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Punkts exists.</p>
    }
</div>
