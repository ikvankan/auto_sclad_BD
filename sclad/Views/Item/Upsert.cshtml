@model sclad.Models.ViewModels.ItemVM

@{
    var title = "Create Item";
}
<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    @if (Model.Item.Id != 0)
    {
        title = "Edit Item";
        <input asp-for="Item.Id" hidden />
    }
    
    <div class="border p-3">
        
        <div class="mb-3 row">
            <h2 class="text-info pl-3"> @title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Item.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Item.Name" class="form-control" />
                        <span asp-validation-for="Item.Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Item.Weight"></label>
                    </div>
                    <div class="col-8">
                        <input type="number" asp-for="Item.Weight" class="form-control" />
                        <span asp-validation-for="Item.Weight" class="text-danger"></span>
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Item.TotalCost"></label>
                    </div>
                    <div class="col-8">
                        <input type="number" asp-for="Item.TotalCost" class="form-control" />
                        <span asp-validation-for="Item.TotalCost" class="text-danger"></span>
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Item.ItemByUser"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Item.ItemByUser" class="form-control" />
                        <span asp-validation-for="Item.ItemByUser" class="text-danger"></span>
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Item.Discription"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Item.Discription" class="form-control" />
                        <span asp-validation-for="Item.Discription" class="text-danger"></span>
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Item.ItemTypeId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Item.ItemTypeId" asp-items="@Model.ItemTypeSelectLIst" class="form-select">
                            <option disabled selected>--Выберите тип товара--</option>
                        </select>
                        <span asp-validation-for="Item.ItemTypeId" class="text-danger"></span>
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        Image
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                        
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.Item.Id != 0)
                            {
                                //Обновить товар
                                <input type="submit" class="btn btn-info w-100" value="Обновить" />
                            }
                            else
                            {
                                //создать товар
                                <input type="submit" onclick="return validateInput()" class="btn btn-primary w-100" value="Создать" />
                            }
                            
                        </div>
                        <div class="col">
                            <a asp-controller="ItemType" asp-action="Index" class="btn btn-success w-100">
                                <i class="fa-solid fa-right-from-bracket"></i> &nbsp; Назад
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        function validateInput() {
            if (document.getElementById('uploadBox').value==""){
                Swal.fire(
                    'Error!',
                    'Пожалуйста загрузите картинку!',
                    'error'
                )
                return false;
            }
            return true;
        }
    </script>
}