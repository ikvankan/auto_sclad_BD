@model sclad.Models.Item

@{
    var title = "Create Item";
}
<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    @if (Model.Id != 0)
    {
        title = "Edit Item";
        <input asp-for="Id" hidden />
    }
    
    <div class="border p-3">
        
        <div class="mb-3 row">
            <h2 class="text-info pl-3"> @title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Weight"></label>
                    </div>
                    <div class="col-8">
                        <input type="number" asp-for="Weight" class="form-control" />
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="TotalCost"></label>
                    </div>
                    <div class="col-8">
                        <input type="number" asp-for="TotalCost" class="form-control" />
                        <span asp-validation-for="TotalCost" class="text-danger"></span>
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="ItemByUser"></label>
                    </div>
                    <div class="col-8">
                        <input  asp-for="ItemByUser" class="form-control" />
                        <span asp-validation-for="ItemByUser" class="text-danger"></span>
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Discription"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Discription" class="form-control" />
                        <span asp-validation-for="Discription" class="text-danger"></span>
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="ItemTypeId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="ItemTypeId" asp-items="@ViewBag.ItemTypeDropDown" class="form-control">
                            <option disabled selected>--Выберите тип товара--</option>
                        </select>
                        <span asp-validation-for="ItemTypeId" class="text-danger"></span>
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        Image
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                        
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.Id != 0)
                            {
                                //Обновить товар
                                <input type="submit" class="btn btn-info w-100" value="Обновить" />
                            }
                            else
                            {
                                //создать товар
                                <input type="submit" onclick="return validateInput()" class="btn btn-primary w-100" value="Создать" />
                            }
                            
                        </div>
                        <div class="col">
                            <a asp-controller="ItemType" asp-action="Index" class="btn btn-success w-100">
                                <i class="fa-solid fa-right-from-bracket"></i> &nbsp; Назад
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}